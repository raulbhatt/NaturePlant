<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_fingerprint_gradient">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:text="FINGERPRINT AUTHENTICATION"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/fingerprintIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fingerprint_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/scanFingerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Place your finger on the sensor"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_vertical"
        android:background="@android:color/transparent"
        android:text="Skip for now"
        android:textColor="@android:color/darker_gray"
       />

    <ImageView
        android:id="@+id/securityBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="bottom|center_vertical"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_security_badge"
        app:tint="@android:color/darker_gray" />

</LinearLayout>